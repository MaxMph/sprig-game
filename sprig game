const player = "p"
const brick = "b"
const grass = "g"
const tree = "t"
const stone = "s"
const header = "h"
const village = "v"

let wood = 0
let woodbuffer = 400
let rock = 0
let rockbuffer = 400
let people = 0
let canclick = true


setLegend(
  [ player, bitmap`
................
................
................
................
................
.......22.......
......2..2......
.....2....2.....
.....2....2.....
......2..2......
