//sound effects
const treehit = tune`
375: E5^375,
11625`
const rockhit = tune`
500: D5~500,
15500`
const move = tune`
265.4867256637168: F4/265.4867256637168,
8230.08849557522`



setSolids([player, header])

let level = 2
const levels = [
  map`
hhhhh
..p..
.....
t.v.s`,
  map`
........
....b...
.bbbb...
........
........
........
........`,
  map`
.......
.......
.......
.......
.......
...p...`
  
]

//setmap()
setmap()
updatetext()

setPushables({
  [ player ]: []
})

onInput("w", () => {
  getFirst(player).y -= 1
  playTune(move)
})

onInput("a", () => {
  getFirst(player).x -= 1
  playTune(move)
})


onInput("s", () => {
  getFirst(player).y += 1
  playTune(move)
})

onInput("d", () => {
  getFirst(player).x += 1
  playTune(move)
})


afterInput(() => {
  
})

onInput("l", () => {
  
  let P = getFirst(player);
  if (level === 0){
    let TREE = getFirst(tree);
    let ROCK = getFirst(stone);
    let HOME = getFirst(village)
    if (canclick == true){
      if (P.x === ROCK.x && P.y === ROCK.y){
        rock += 1
        playTune(rockhit)
        updatetext()
        canclick = false
        setTimeout(clickbuffer, rockbuffer)
      }
      if (P.x === TREE.x && P.y === TREE.y){
        wood += 1
        playTune(treehit)
        updatetext()
        canclick = false
        setTimeout(clickbuffer, woodbuffer)
      }
      if (P.x === HOME.x && P.y === HOME.y && wood > 0 && rock > 0){
        people += 1
        wood -= 1
        rock -=1
        playTune(treehit)
        updatetext()
        canclick = false
        setTimeout(clickbuffer, woodbuffer)
      }
    }
  }
  if (level === 2){
    level = 0
    setmap()
    updatetext()
    setBackground(grass)
  }
})

function clickbuffer()
  {
    canclick = true
  }

//level stuff

function setmap(){
  setMap(levels[level])
}



if (level === 2)
  setBackground(header)

function updatetext()
{
  clearText()
  
  if (level === 0){
    addText("wood: " + wood, {
      x:0,
      y:0,
      color: color`2`
    })
    addText("stone: " + rock, {
      x:0,
      y:1,
      color: color`2`
    })
  }
  if (level === 2){
    clearText()
    addText("press L to start", {
      x:2,
      y:10,
      color: color`2`
    })
    addText("CLICKER KINGDOM", {
      x:2,
      y:4,
      color: color`2`
    })
  }
  
}
